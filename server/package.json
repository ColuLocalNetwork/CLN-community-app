{
  "name": "cln-community-server",
  "version": "0.1.0",
  "description": "backend for the CLN community DApp",
  "main": "app.js",
  "scripts": {
    "start": "node ./src/app.js",
    "dev": "nodemon ./src/app.js",
    "test": "node ./node_modules/truffle/build/cli.bundled.js test",
    "lint": "standard",
    "lint-fix": "standard --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/colucom/CLN-community-server.git"
  },
  "standard": {
    "env": [
      "mocha"
    ],
    "globals": [
      "artifacts",
      "assert",
      "contract"
    ]
  },
  "_moduleAliases": {
    "@constants": "./src/constants",
    "@models": "./src/models",
    "@routes": "./src/routes",
    "@utils": "./src/utils",
    "@services": "./src/services",
    "@events": "./src/events"
  },
  "license": "MIT",
  "dependencies": {
    "@babel/runtime": "^7.3.1",
    "@sendgrid/client": "^6.3.0",
    "@sendgrid/mail": "^6.3.1",
    "agenda": "^2.0.2",
    "async": "^2.6.1",
    "aws-sdk": "^2.405.0",
    "bignumber.js": "^8.1.1",
    "body-parser": "^1.18.3",
    "config": "^1.30.0",
    "cors": "2.7.1",
    "debug": "2.6.9",
    "eth-sig-util": "^2.1.1",
    "express": "4.16.3",
    "express-async-errors": "^2.1.2",
    "express-jwt": "^5.3.1",
    "express-paginate": "^1.0.0",
    "jsonwebtoken": "^8.4.0",
    "lodash": "^4.17.11",
    "methods": "1.1.2",
    "module-alias": "^2.1.0",
    "moment": "^2.23.0",
    "mongoose": "^5.4.4",
    "morgan": "^1.9.1",
    "multer": "^1.3.1",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7",
    "validator": "^10.10.0",
    "web3": "^1.0.0-beta.37"
  },
  "devDependencies": {
    "nodemon": "^1.18.11",
    "standard": "^11.0.1",
    "truffle": "^4.1.14"
  }
}
