{
  "name": "CLN-community-server",
  "version": "0.0.1",
  "description": "backend for the CLN community DApp",
  "main": "app.js",
  "scripts": {
    "start": "node ./src/app.js",
    "dev": "nodemon ./src/app.js",
    "test": "node ./node_modules/truffle/build/cli.bundled.js test",
    "lint": "./node_modules/.bin/standard"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/colucom/CLN-community-server.git"
  },
  "standard": {
    "ignore": [
      "constants/abi",
      "migrations"
    ],
    "env": [
      "mocha"
    ],
    "globals": [
      "artifacts",
      "assert",
      "contract"
    ]
  },
  "_moduleAliases": {
    "@constants": "./src/constants",
    "@models": "./src/models",
    "@routes": "./src/routes",
    "@utils": "./src/utils",
    "@services": "./src/services"
  },
  "license": "MIT",
  "dependencies": {
    "agenda": "^2.0.2",
    "async": "^2.6.1",
    "await-to-js": "^2.0.1",
    "body-parser": "1.15.0",
    "cln-solidity": "^1.0.0",
    "config": "^1.30.0",
    "cors": "2.7.1",
    "debug": "2.6.9",
    "express": "4.16.3",
    "express-async-errors": "^2.1.2",
    "express-jwt": "^5.3.1",
    "express-paginate": "^1.0.0",
    "ganache-cli": "^6.1.8",
    "ipfs-api": "^20.2.1",
    "mandrill-api": "^1.0.45",
    "methods": "1.1.2",
    "module-alias": "^2.1.0",
    "mongoose": "^5.2.7",
    "mongoose-time": "^0.1.0",
    "mongoose-unique-validator": "1.0.2",
    "morgan": "1.7.0",
    "multer": "^1.3.1",
    "request": "^2.88.0",
    "truffle-contract": "^4.0.0-beta.1",
    "web3": "^1.0.0-beta.35"
  },
  "devDependencies": {
    "nodemon": "^1.18.3",
    "standard": "^11.0.1",
    "truffle": "^4.1.14"
  }
}
